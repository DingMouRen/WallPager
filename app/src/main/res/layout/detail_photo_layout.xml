<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple"
                android:clickable="true">
    <!--相当于toolbar-->
    <RelativeLayout
        android:id="@+id/rela_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <ImageView
            android:id="@+id/img_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:background="@drawable/ripple"
            android:clickable="true"
            android:src="@drawable/arrow_back"
            />

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:background="@drawable/ripple"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/detail_menu"
            />
    </RelativeLayout>
    <!--作者信息以及功能-->
    <RelativeLayout
        android:id="@+id/rela_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rela_toolbar"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/card_autor"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="50dp"
            app:cardElevation="@dimen/activity_horizontal_margin"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_author_header"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/imgtest"
                />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_autor"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:text="齐白石"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_author"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:text="拍摄于 2017-05-20"
            />
        <!--功能-->
        <android.support.percent.PercentRelativeLayout
            android:id="@+id/rela_function"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            >

            <TextView
                android:id="@+id/tv_load_photo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/ripple"
                android:clickable="true"
                android:drawablePadding="@dimen/activity_horizontal_margin"
                android:drawableTop="@drawable/load_photo"
                android:gravity="center"
                android:text="下载"
                app:layout_widthPercent="33%"
                />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_load_photo"
                android:background="@drawable/ripple"
                android:clickable="true"
                android:drawablePadding="@dimen/activity_horizontal_margin"
                android:drawableTop="@drawable/share"
                android:gravity="center"
                android:text="分享"
                app:layout_widthPercent="33%"
                />

            <TextView
                android:id="@+id/tv_set_phone_page"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_share"
                android:background="@drawable/ripple"
                android:clickable="true"
                android:drawablePadding="@dimen/activity_horizontal_margin"
                android:drawableTop="@drawable/set_phone_page"
                android:gravity="center"
                android:text="设置壁纸"
                app:layout_widthPercent="33%"
                />
        </android.support.percent.PercentRelativeLayout>
        <View
            android:id="@+id/divide"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/md_grey_300"
            android:layout_below="@+id/rela_function"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            />
        <!--照片的属性-->
        <LinearLayout
            android:id="@+id/linear_photo_attr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/divide"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:text="照片属性"
                android:textSize="20sp"
                android:clickable="true"
                android:background="@drawable/ripple"
                android:gravity="center_vertical"
                android:textColor="@color/md_grey_700"
                />
            <TextView
                android:id="@+id/tv_attr_size"
                style="@style/PhotoAttrTextViewStyle"
                android:text="分辨率 500 x 500"
                android:drawableLeft="@drawable/ic_size"
                />
            <TextView
                android:id="@+id/tv_attr_exposure"
                style="@style/PhotoAttrTextViewStyle"
                android:text="快门时间：1/4000"
                android:drawableLeft="@drawable/ic_exposure"
                />
            <TextView
                android:id="@+id/tv_attr_aperture"
                style="@style/PhotoAttrTextViewStyle"
                android:text="光圈：2.8"
                android:drawableLeft="@drawable/ic_aperture"
                />
            <TextView
                android:id="@+id/tv_attr_focal"
                style="@style/PhotoAttrTextViewStyle"
                android:text="焦距：24"
                android:drawableLeft="@drawable/ic_focal"
                />
            <TextView
                android:id="@+id/tv_attr_model"
                style="@style/PhotoAttrTextViewStyle"
                android:text="器材：NIKON D610"
                android:drawableLeft="@drawable/ic_model"
                />
            <TextView
                android:id="@+id/tv_attr_iso"
                style="@style/PhotoAttrTextViewStyle"
                android:text="曝光：1600"
                android:drawableLeft="@drawable/ic_iso"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>