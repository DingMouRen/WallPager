<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    app:cardCornerRadius="0dp"
    app:cardElevation="5dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--壁纸图片-->
        <ImageView
            android:id="@+id/img_pager"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:scaleType="centerCrop"
            />
        <!--作者信息-->
        <RelativeLayout
            android:id="@+id/author_info"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#f2f2f2"
           android:layout_below="@+id/img_pager"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/author_header"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/imgtest"
                android:padding="5dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/author_header"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:id="@+id/author_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:textSize="12sp"
                    android:text="作者：Jack"
                    android:textColor="#a2a2a2"
                    />
                <TextView
                    android:id="@+id/author_location"
                    android:layout_toRightOf="@+id/author_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="位于：华盛顿"
                    android:textSize="12sp"
                    android:textColor="#a2a2a2"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>